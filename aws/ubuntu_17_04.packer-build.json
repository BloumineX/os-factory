{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_token": "",
    "build_subnet_id": "",
    "build_instance_type": "t2.large",
    "build_default_user": "centos",
    "build_region": "",
    "build_image_name": "",
    "source_ami_name": "",
    "source_ami_owner": "",
    "playbook_build": "",
    "playbook_roles": "",
    "json_output_path": ""
  },


  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `build_region` }}",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "token": "{{ user `aws_token` }}",
      "subnet_id": "{{ user `build_subnet_id` }}",
      "source_ami_filter": {
        "filters": {
          "name": "{{ user `source_ami_name` }}",
          "virtualization-type": "hvm",
          "root-device-type": "ebs"
        },
        "owners": [
          "{{ user `source_ami_owner` }}"
        ],
        "most_recent": true
      },
      "instance_type": "{{ user `build_instance_type` }}",
      "ssh_username": "{{ user `build_default_user` }}",
      "ssh_private_ip": true,
      "ssh_timeout": "30m",
      "ami_name": "{{ user `build_image_name` }}",
      "tags": {
        "Name": "{{ user `build_image_name` }}",
        "Release": "{{ timestamp }}"
      },
      "user_data_file": "{{ user `playbook_build`}}/../../files/setup_python.txt"
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "user": "{{ user `build_default_user` }}",
      "playbook_file": "{{ user `playbook_build`}}/play.yml",
      "ansible_env_vars": [ "ANSIBLE_ROLES_PATH={{ user `playbook_roles`}}" ]
    }
  ],

  "post-processors": [
    {
      "type": "manifest",
      "output": "{{ user `json_output_path` }}"
    }
  ]



}
